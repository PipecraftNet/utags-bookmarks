{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "types": ["svelte"],
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**", "dist"]
}
