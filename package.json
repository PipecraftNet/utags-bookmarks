{
  "name": "utags-app",
  "version": "0.7.0-25052301",
  "author": "Pipecraft",
  "namespace": "https://utags.pipecraft.net/",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/utags/utags-bookmarks/issues"
  },
  "homepage": "https://github.com/utags/utags-bookmarks#readme",
  "type": "module",
  "scripts": {
    "p": "prettier --write . && npx prettier@2.8.8 --config .prettierrc-markdown.cjs --write *.md",
    "lint": "run-s lint:*",
    "lint:code": "npm run p && xo --fix",
    "lint:type": "tsc --noemit",
    "lint:check": "svelte-check --tsconfig ./tsconfig.json",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "test:ui": "vitest --ui --coverage.enabled=true",
    "machine-translate": "inlang machine translate --project project.inlang",
    "sort-messages-keys": "node sort-message-keys.js"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tailwindcss/postcss": "^4.1.7",
    "@tailwindcss/vite": "^4.1.7",
    "@testing-library/svelte": "^5.2.8",
    "@types/jsdom": "^21.1.7",
    "@vitest/coverage-v8": "^3.1.4",
    "@vitest/ui": "^3.1.4",
    "autoprefixer": "^10.4.21",
    "browser-extension-utils": "^0.1.19",
    "console-tagger": "^0.0.6",
    "focus-trap-lite": "^0.0.6",
    "jsdom": "^26.1.0",
    "lucide-svelte": "^0.511.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.3",
    "postcss-load-config": "^6.0.1",
    "prettier": "^3.5.3",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "svelte": "^5.32.1",
    "svelte-check": "^4.2.1",
    "svelte-persisted-store": "^0.12.0",
    "svelte-virtual-list": "^3.0.1",
    "tailwindcss": "^4.1.7",
    "typescript": "^5.8.3",
    "utags-utils": "^0.1.0",
    "vite": "^6.3.5",
    "vite-plugin-pwa": "^1.0.0",
    "vitest": "^3.1.4",
    "xo": "^0.60.0",
    "@inlang/paraglide-js": "2.0.13",
    "@inlang/cli": "^3.0.0"
  },
  "xo": {
    "space": 2,
    "prettier": true,
    "envs": [
      "browser"
    ],
    "rules": {
      "@typescript-eslint/prefer-nullish-coalescing": 0,
      "@typescript-eslint/prefer-optional-chain": 0,
      "unicorn/prevent-abbreviations": 0,
      "capitalized-comments": 0
    },
    "overrides": [
      {
        "files": [
          "src/data/*"
        ],
        "rules": {
          "@typescript-eslint/naming-convention": 0,
          "unicorn/filename-case": 0
        }
      },
      {
        "files": [
          "src/**/*.test.ts"
        ],
        "rules": {
          "@typescript-eslint/naming-convention": 0,
          "max-params": 0
        }
      },
      {
        "files": [
          "src/sw.js"
        ],
        "rules": {
          "unicorn/prefer-global-this": 0,
          "array-callback-return": 0
        }
      },
      {
        "files": [
          "vite.config.ts"
        ],
        "rules": {
          "import/no-anonymous-default-export": 0,
          "@typescript-eslint/naming-convention": 0,
          "@typescript-eslint/no-unsafe-call": 0,
          "new-cap": 0
        }
      }
    ],
    "ignore": [
      "src/sync/*",
      "src/sync2/*",
      "src/utils/sync*",
      "src/services/sync*",
      "src/stores/stores2.js"
    ]
  }
}
